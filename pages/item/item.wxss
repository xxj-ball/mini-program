/* pages/item/item.wxss */
.itemWrap{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}
.item{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  border-bottom: 1px solid #eee;
}
.seat{
  display: flex;
  align-items: center;
}
.img{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
  display: block;
}
.bottom{
  width: 100%;
  height: 80rpx;
  display: flex;
  position: absolute;
  left: 0;
  bottom: 0;
}
.money{
  flex: 1;
  background-color:#EDEDED ;
  text-align: center;
  font-size: 22rpx;
  line-height: 80rpx;
}
.btn{
  flex: 2;
  background-color:#A3A2F4 ;
  border-radius: 0;
  color: #fff;
  font-size: 22rpx;
  line-height: 80rpx;
}